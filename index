        gap: 10px;
    }

    .card {
        width: 100px;
        height: 100px;
        background: #3498db;
        font-size: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        border-radius: 10px;
        user-select: none;
    }

    .card.flipped {
        background: #ecf0f1;
        color: #2c3e50;
        cursor: default;
    }

    .card.matched {
        background: #2ecc71;
        cursor: default;
    }

    button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
