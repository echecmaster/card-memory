<body>

<h1>üß† Jeu de Memory</h1>

<div class="info">
    ‚è± Temps : <span id="time">0</span>s |
    üéØ Coups : <span id="moves">0</span>
</div>

<div class="game" id="game"></div>

<button onclick="resetGame()">üîÑ Recommencer</button>

<script>
    const symbols = ["üçé","üçå","üçí","üçá","üçâ","üçç","ü•ù","üçë"];
    let cards = [...symbols, ...symbols];
    let firstCard = null;
    let secondCard = null;
    let lockBoard = false;
    let moves = 0;
    let matchedPairs = 0;
    let time = 0;
    let timer;

    const game = document.getElementById("game");
    const movesDisplay = document.getElementById("moves");
    const timeDisplay = document.getElementById("time");

    function shuffle(array) {
        return array.sort(() => Math.random() - 0.5);
    }

    function startTimer() {
        timer = setInterval(() => {
            time++;
            timeDisplay.textContent = time;
        }, 1000);
    }

    function createBoard() {
        shuffle(cards);
        game.innerHTML = "";
        cards.forEach(symbol => {
            const card = document.createElement("div");
            card.classList.add("card");
            card.dataset.symbol = symbol;
            card.textContent = "";
            card.addEventListener("click", flipCard);
            game.appendChild(card);
        });
    }

    function flipCard() {
        if (lockBoard || this === firstCard || this.classList.contains("matched")) return;

        if (moves === 0 && !timer) startTimer();

        this.classList.add("flipped");
        this.textContent = this.dataset.symbol;

        if (!firstCard) {
            firstCard = this;
            return;
        }

        secondCard = this;
        moves++;
        movesDisplay.textContent = moves;

        checkMatch();
    }

    function checkMatch() {
        if (firstCard.dataset.symbol === secondCard.dataset.symbol) {
            firstCard.classList.add("matched");
            secondCard.classList.add("matched");
            matchedPairs++;
            resetTurn();

            if (matchedPairs === symbols.length) {
                clearInterval(timer);
                setTimeout(() => {
                    alert(`üéâ Bravo !\nTemps : ${time}s\nCoups : ${moves}`);
                }, 300);
            }
        } else {
            lockBoard = true;
            setTimeout(() => {
                firstCard.classList.remove("flipped");
                secondCard.classList.remove("flipped");
                firstCard.textContent = "";
                secondCard.textContent = "";
                resetTurn();
            }, 1000);
        }
    }

    function resetTurn() {
        firstCard = null;
        secondCard = null;
        lockBoard = false;
    }

    function resetGame() {
        clearInterval(timer);
        timer = null;
        time = 0;
        moves = 0;
        matchedPairs = 0;
        timeDisplay.textContent = 0;
        movesDisplay.textContent = 0;
        createBoard();
    }

    createBoard();
</script>

</body>
